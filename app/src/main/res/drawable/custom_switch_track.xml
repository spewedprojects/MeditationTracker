<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked + Enabled -->
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_white"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Checked + Disabled -->
    <item android:state_checked="true" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_white_0.4"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Unchecked + Enabled -->
    <item android:state_checked="false" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_white_0.4"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Unchecked + Disabled -->
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black_white_0.4"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>