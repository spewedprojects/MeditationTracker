<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Group Shape (Outer Corners Rounded) -->
    <style name="ExportImportGroupShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Button Style (Shared Properties) -->
    <style name="ExportImportButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/atkinsonhyperlegiblenext_medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">16.5sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:icon">@drawable/export_button_bg</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="iconPadding">4dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item> <!-- Transparent background -->
        <item name="background">?attr/colorOnPrimary</item>
        <item name="strokeWidth">0dp</item> <!-- Remove border -->
    </style>

    <!-- Export Button Corners (Left Rounded, Right Square) -->
    <style name="ExportButtonCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Import Button Corners (Right Rounded, Left Square) -->
    <style name="ImportButtonCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Middle Button Corners (Right Square, Left Square) -->
    <style name="MiddleButtonCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- Group Shape (Outer Corners Rounded) -->
    <style name="method_A_B_GroupShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Button Style (Shared Properties) -->
    <style name="method_A_B_Group_ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/atkinsonhyperlegiblenext_extrabold</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item> <!-- Transparent background -->
        <item name="background">?attr/colorOnPrimary</item>
        <item name="strokeWidth">0dp</item> <!-- Remove border -->
    </style>

    <!-- Group Shape (Outer Corners Rounded) -->
    <style name="method_WMY_GroupShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Button Style (Shared Properties) -->
    <style name="method_WMY_Group_ButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/atkinsonhyperlegiblenext_medium</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">18.5sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item> <!-- Transparent background -->
        <item name="background">?attr/colorOnPrimary</item>
        <item name="strokeWidth">0dp</item> <!-- Remove border -->
    </style>

    <style name="AppTheme_Light" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/primaryVariant</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/onPrimary2</item>
        <item name="colorButtonNormal">@color/switchbutton</item>
        <item name="colorBackgroundFloating">@color/deletebutton</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorHint">@color/textHintcolor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryInverse">@color/black</item>
    </style>

    <style name="AppTheme_Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/primaryVariant</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/onPrimary2</item>
        <item name="colorButtonNormal">@color/switchbutton</item>
        <item name="colorBackgroundFloating">@color/deletebutton</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorHint">@color/textHintcolor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryInverse">@color/white</item>
    </style>
</resources>