<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/db_year_picker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialogbox_years"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginVertical="36dp"
        android:layout_marginHorizontal="90dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:strokeColor="@color/success_green"
        app:cardElevation="16dp"
        app:cardBackgroundColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView_year"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/list_years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="2026"
                    android:gravity="center"
                    android:textSize="65sp"
                    android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnselect_Year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="90dp"
        app:cornerRadius="12dp"
        app:elevation="12dp"
        android:backgroundTint="?attr/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/dialogbox_years"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>