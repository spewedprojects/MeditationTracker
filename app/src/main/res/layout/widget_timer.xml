<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_timer_background"
    android:gravity="fill_horizontal"
    android:padding="0dp">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="-30dp"
        android:translationY="-15dp"
        android:alpha="0.2"
        android:src="@drawable/about_image" />

    <TextView
        android:id="@+id/widget_timer_display"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:layout_toStartOf="@id/widget_record_btn"
        android:fontFamily="@font/atkinsonhyperlegiblenext_regular"
        android:letterSpacing="0.05"
        android:scaleX="1.0"
        android:scaleY="1.2"
        android:text="00:00:00"
        android:textStyle="bold"
        android:textColor="@color/black_white"
        android:textSize="46dp"
        android:translationY="-3dp"
        android:typeface="monospace" />

    <ImageButton
        android:id="@+id/widget_record_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:background="@color/transparent"
        android:letterSpacing="0.04"
        android:padding="0dp"
        android:src="@drawable/start_circle_64dp"
        android:text="Start"
        android:textColor="@color/white_black"
        android:textSize="13sp"
        android:textStyle="bold" />

</RelativeLayout>