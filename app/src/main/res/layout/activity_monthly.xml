<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f5"
    app:circularflow_defaultRadius="10dp"
    tools:context=".MonthlyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.appcompat.widget.Toolbar> <!-- Toolbar for the sake adding title and the menubutton, no function -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Menu button on toolbar next to title -->
        <Button
            android:id="@+id/menubutton"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:backgroundTint="#00FFFFFF"
            android:text="@string/blank_spaces"
            android:textColor="#00FFFFFF"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            android:visibility="visible"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_hamburgermenu"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconSize="24dp"
            app:iconTint="#A4000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Centered title on actionbar -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:fontFamily="@font/kumbh_sans_bold"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout> <!-- Constrained layout for menubutton and Title -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="24dp"
        app:barrierMargin="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2"
        app:layout_constraintVertical_bias="0.04">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/monthlyBarChart"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/month_total"
                app:layout_constraintBottom_toTopOf="@id/displayed_month"
                app:layout_constraintVertical_bias="0" />

            <Button
                android:id="@+id/previous_monthButton"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#18000000"
                android:fontFamily="@font/kumbh_sans_light"
                android:gravity="center"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_arrow_back"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/displayed_month"
                app:layout_constraintTop_toBottomOf="@id/monthlyBarChart" />

            <Button
                android:id="@+id/next_monthButton"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="#18000000"
                android:fontFamily="@font/kumbh_sans_light"
                android:gravity="center"
                app:cornerRadius="8dp"
                app:icon="@drawable/baseline_arrow_forward"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="22dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toRightOf="@id/displayed_month"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/monthlyBarChart" />

            <TextView
                android:id="@+id/displayed_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="0dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/kumbh_sans"
                android:text="January"
                android:textColor="#AC000000"
                android:textColorLink="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/displayed_monthYear"
                app:layout_constraintLeft_toRightOf="@id/previous_monthButton"
                app:layout_constraintRight_toLeftOf="@id/next_monthButton"
                app:layout_constraintTop_toBottomOf="@+id/monthlyBarChart"
                app:layout_constraintVertical_bias="1"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/displayed_monthYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="18dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/kumbh_sans"
                android:text="2025"
                android:textColor="#AC000000"
                android:textColorLink="@color/black"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/previous_monthButton"
                app:layout_constraintRight_toLeftOf="@id/next_monthButton"
                app:layout_constraintTop_toBottomOf="@+id/displayed_month"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0.5"
                tools:ignore="TextViewEdits" /> <!-- Week Date display -->

            <TextView
                android:id="@+id/month_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/kumbh_sans_bold"
                android:text="@string/menu_monthly"
                android:textColor="#000000"
                android:textColorLink="@color/black"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextViewEdits" /> <!-- Month overview -->

            <TextView
                android:id="@+id/month_summ_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/kumbh_sans"
                android:text="@string/month_summ_desc"
                android:textColor="#CD000000"
                android:textColorLink="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/month_total_title"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextViewEdits" /> <!-- Month Overview description -->

            <TextView
                android:id="@+id/month_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="16dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/kumbh_sans_bold"
                android:text="Total: 0.00 hours"
                android:textColor="#000000"
                android:textColorLink="@color/black"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/month_summ_desc"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="TextViewEdits" /> <!-- Month's total time -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView> <!-- Monthly overview card -->

</androidx.constraintlayout.widget.ConstraintLayout>