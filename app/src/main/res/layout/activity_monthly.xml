<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    app:circularflow_defaultRadius="10dp"
    android:fitsSystemWindows="true"
    tools:context=".MonthlyActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.appbar.MaterialToolbar> <!-- Toolbar for the sake adding title and the menubutton, no function -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar2_constM"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Menu button on toolbar next to title -->
        <Button
            android:id="@+id/menubutton"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#00FFFFFF"
            android:textColor="#00FFFFFF"
            android:textColorHighlight="#00FFFFFF"
            android:textColorHint="#00FFFFFF"
            android:textColorLink="#00FFFFFF"
            android:visibility="visible"
            app:cornerRadius="8dp"
            app:icon="@drawable/arrow_menu_open"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            app:iconSize="23dp"
            app:iconTint="?attr/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/toolbar_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Centered title on actionbar -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:fontFamily="@font/kumbh_sans_bold"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout> <!-- Constrained layout for menubutton and Title -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar2_constM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginBottom="24dp"
                app:barrierMargin="16dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="?attr/colorPrimaryVariant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar2"
                app:layout_constraintVertical_bias="0.04">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/month_summ"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/monthlyBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="18dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/month_total"
                        app:layout_constraintBottom_toTopOf="@id/month_nav"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintVertical_bias="0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/month_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/monthlyBarChart"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.5">
                        <Button
                            android:id="@+id/previous_monthButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="55dp"
                            android:layout_marginStart="16dp"
                            android:backgroundTint="?attr/colorButtonNormal"
                            android:fontFamily="@font/kumbh_sans_light"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/baseline_arrow_back"
                            app:iconGravity="textStart"
                            app:iconSize="20dp"
                            app:iconPadding="0dp"
                            app:iconTint="?attr/colorOnPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/next_monthButton"
                            app:layout_constraintTop_toTopOf="parent" />

                        <Button
                            android:id="@+id/next_monthButton"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="55dp"
                            android:backgroundTint="?attr/colorButtonNormal"
                            android:fontFamily="@font/kumbh_sans_light"
                            android:gravity="center"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:icon="@drawable/baseline_arrow_forward"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:iconSize="20dp"
                            app:iconTint="?attr/colorOnPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintLeft_toRightOf="@+id/previous_monthButton"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/displayed_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="0dp"
                            android:filterTouchesWhenObscured="false"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/kumbh_sans"
                            android:text="January"
                            android:textColor="?attr/colorAccent"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toTopOf="@id/displayed_monthYear"
                            app:layout_constraintLeft_toRightOf="@id/previous_monthButton"
                            app:layout_constraintRight_toLeftOf="@id/next_monthButton"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1"
                            app:layout_constraintHorizontal_bias="0.5"
                            tools:ignore="TextViewEdits" />

                        <TextView
                            android:id="@+id/displayed_monthYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="18dp"
                            android:filterTouchesWhenObscured="false"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/kumbh_sans"
                            android:text="2025"
                            android:textColor="?attr/colorAccent"
                            android:textSize="10sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/previous_monthButton"
                            app:layout_constraintRight_toLeftOf="@id/next_monthButton"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.8"
                            app:layout_constraintHorizontal_bias="0.5"
                            tools:ignore="TextViewEdits" /> <!-- Week Date display -->
                </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/month_total_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:filterTouchesWhenObscured="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/kumbh_sans_bold"
                        android:text="@string/menu_monthly"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="23sp"
                        app:layout_constraintBottom_toTopOf="@id/month_summ_desc"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="TextViewEdits" /> <!-- Month overview -->

                    <TextView
                        android:id="@+id/month_summ_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:filterTouchesWhenObscured="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/kumbh_sans"
                        android:text="@string/month_summ_desc"
                        android:textColor="?attr/colorAccent"
                        android:textSize="13sp"
                        app:layout_constraintBottom_toTopOf="@id/month_total"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/month_total_title"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="TextViewEdits" /> <!-- Month Overview description -->

                    <TextView
                        android:id="@+id/month_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="8dp"
                        android:filterTouchesWhenObscured="false"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/kumbh_sans_bold"
                        android:text="Total: 0.00 hours"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@id/monthlyBarChart"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/month_summ_desc"
                        app:layout_constraintVertical_bias="0.0"
                        tools:ignore="TextViewEdits" /> <!-- Month's total time -->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView> <!-- Monthly overview card -->
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>