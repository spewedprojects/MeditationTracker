<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar2_constW"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <include
            layout="@layout/actiontoolbar"/>

    </androidx.constraintlayout.widget.ConstraintLayout> <!-- Constrained layout for menubutton and Title -->

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/WMY_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp"
        app:shapeAppearance="@style/method_WMY_GroupShape"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar2_constW"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0.5">
        <!-- Week Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/W_Button"
            style="@style/method_WMY_Group_ButtonStyle"
            android:text="Week"
            app:shapeAppearanceOverlay="@style/ExportButtonCorners"
            android:insetRight="1dp"
            android:padding="0dp"/>
        <!-- Month Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/M_Button"
            style="@style/method_WMY_Group_ButtonStyle"
            android:text="Month"
            app:shapeAppearanceOverlay="@style/MiddleButtonCorners"
            android:insetLeft="1dp"
            android:insetRight="1dp"
            android:padding="0dp"/>
        <!-- Year Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Y_Button"
            style="@style/method_WMY_Group_ButtonStyle"
            android:text="Year"
            app:shapeAppearanceOverlay="@style/ImportButtonCorners"
            android:insetLeft="1dp"
            android:padding="0dp"/>

    </com.google.android.material.button.MaterialButtonToggleGroup> <!-- Method change button group -->

    <View
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:background="@drawable/lineargradient_bg"
        app:layout_constraintTop_toBottomOf="@id/WMY_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="4dp"
        android:importantForAccessibility="no"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cards_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/WMY_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_summary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="0dp"
            app:cornerRadius="8dp"
            android:paddingHorizontal="12dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cards_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:text="Generate Report"
            android:textSize="16sp"
            app:rippleColor="@color/onPrimary2"
            android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>