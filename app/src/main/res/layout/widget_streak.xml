<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_streak_active_background"
    android:id="@+id/streak_widget_layout"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/streakdaysField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="0dp"
        android:layout_below="@id/widget_streak_title"
        android:translationY="0dp">

        <TextView
            android:id="@+id/widget_streak_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:text="37"
            android:letterSpacing="0.05"
            android:textAlignment="center"
            android:textColor="@color/black_white"
            android:textSize="44dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="d"
            android:includeFontPadding="false"
            android:textColor="@color/black_white"
            android:alpha="0.8"
            android:textSize="12dp"
            android:textAlignment="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_streak_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Streak"
        android:textColor="@color/black_white"
        android:textSize="17sp"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:maxLines="1"
        android:alpha="0.9"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/widget_streak_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="6dp"
        android:max="100"
        android:progress="50"
        android:progressTint="@color/success_green"
        android:layout_centerHorizontal="true"
        android:progressDrawable="@drawable/progress_bar_style"
        android:layout_below="@id/streakdaysField"
        android:visibility="visible"/>

</RelativeLayout>